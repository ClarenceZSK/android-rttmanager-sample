<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="4dp"
                                    app:contentPadding="4dp">

    <RelativeLayout
        android:id="@+id/wifi_network_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblSsid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ssid"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/txtSsid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblSsid"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/lblSsid"
            tools:text="Trendantenna"
            />

        <TextView
            android:id="@+id/lblMCResponder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lblSsid"
            android:layout_marginTop="8dp"
            android:text="@string/supports_802_11mc"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <TextView
            android:id="@+id/txtMCResponder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lblMCResponder"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/lblMCResponder"
            tools:text="true"

            />

        <TextView
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>